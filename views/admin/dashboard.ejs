<div class="admin-title">
    <h2>Posts</h2>
    <a href="/admin/add_post_page" class="btn">+Add New</a>
</div>

<ul class="admin-posts">
    <% data.forEach(post => { %>
     <li>
        <a href="/post/<%= post._id %>">
            <%= post.title %>
        </a>
        <div class="admin-post-controls">
            <a href="/admin/edit-post-page/<%= post._id %>" class="btn">Edit</a>
            <form action="/admin/delete-post/<%= post._id %>?_method=DELETE" method="POST">
                <input type="submit" value="Delete" class="btn">
            </form>
        </div>
     </li>
    <% }) %>
</ul>